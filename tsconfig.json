{
  "compilerOptions": {
    "target": "es2016",
    /* Modules */
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "."
  ],
  "exclude": [
    "node_modules",
    ".gitignore",
    ".git"
  ],
}